<Window
    x:Class="ModbusTcpLight.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt" />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3.2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Modbus TCP Light" FontSize="26" FontWeight="Bold" Margin="0,0,0,30"/>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                <TextBlock Text="IP: " Width="60" VerticalAlignment="Center"/>
                <TextBox x:Name="TxtIp" Width="150" Text="127.0.0.1" VerticalAlignment="Center" Background="#F0FFFFFF" BorderBrush="#DDDDDD"/>
            </StackPanel>
            <Button x:Name="ConnectButton" Content="Connect" Margin="0,10,0,10" Width="100" Click="ConnectButton_Click"/>
            <Button x:Name="DisconnectButton" Content="Disconnect" Margin="0,0,0,10" IsEnabled="False" Width="100" Click="DisconnectButton_Click"/>
            <Button x:Name="AllLedsOn" Content="AllLedsOn" Margin="0,0,0,10" Width="100" Click="Button_Click"/>
            <Button x:Name="AllLedsOff" Content="AllLedsOff" Margin="0,0,0,10" Width="100" Click="AllLedsOff_Click"/>
            <TextBlock x:Name="StatusTextBlock" Margin="0,20,0,0" Foreground="Red"/>
        </StackPanel>
        <Grid Grid.Column="1" Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Ellipse x:Name="Led1" Grid.Row="0" Grid.Column="0" 
             Margin="10" Stroke="#999999" StrokeThickness="2" Width="120" Height="120" Tapped="Led_Tapped"/>
            <Ellipse x:Name="Led2" Grid.Row="0" Grid.Column="1" 
             Margin="10" Stroke="#999999" StrokeThickness="2" Width="120" Height="120" Tapped="Led_Tapped" />
            <Ellipse x:Name="Led3" Grid.Row="0" Grid.Column="2" 
             Margin="10" Stroke="#999999" StrokeThickness="2" Width="120" Height="120" Tapped="Led_Tapped"/>
            <Ellipse x:Name="Led4" Grid.Row="0" Grid.Column="3" 
             Margin="10" Stroke="#999999" StrokeThickness="2" Width="120" Height="120" Tapped="Led_Tapped"/>
            <Ellipse x:Name="Led5" Grid.Row="1" Grid.Column="0" 
             Margin="10" Stroke="#999999" StrokeThickness="2" Width="120" Height="120" Tapped="Led_Tapped"/>
            <Ellipse x:Name="Led6" Grid.Row="1" Grid.Column="1" 
             Margin="10" Stroke="#999999" StrokeThickness="2" Width="120" Height="120" Tapped="Led_Tapped"/>
            <Ellipse x:Name="Led7" Grid.Row="1" Grid.Column="2" 
             Margin="10" Stroke="#999999" StrokeThickness="2" Width="120" Height="120" Tapped="Led_Tapped"/>
            <Ellipse x:Name="Led8" Grid.Row="1" Grid.Column="3" 
             Margin="10" Stroke="#999999" StrokeThickness="2" Width="120" Height="120" Tapped="Led_Tapped"/>
        </Grid>
    </Grid>
</Window>